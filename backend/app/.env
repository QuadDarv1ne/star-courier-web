# ============================================================================

# ========================
# APPLICATION SETTINGS
# ========================

APP_NAME=StarCourier Web

APP_VERSION=1.0.0

ENVIRONMENT=development

DEBUG=True

# Сгенерировано через: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=7f8c3b2e9a1d4f6e8c3b2e9a1d4f6e8c3b2e9a1d4f6e8c3b2e9a1d4f6e8c3b

# ========================
# SERVER SETTINGS
# ========================

SERVER_HOST=0.0.0.0

SERVER_PORT=8000

API_PREFIX=/api

CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ========================
# DATABASE SETTINGS
# ========================

DATABASE_TYPE=sqlite

# Для разработки используем SQLite
DATABASE_URL=sqlite:///./starcourier.db

DATABASE_POOL_SIZE=5

DATABASE_MAX_OVERFLOW=10

# ========================
# CACHE SETTINGS
# ========================

CACHE_ENABLED=False

CACHE_TYPE=memory

REDIS_URL=redis://localhost:6379/0

CACHE_TTL=300

# ========================
# AUTHENTICATION SETTINGS
# ========================

AUTH_ENABLED=False

JWT_ALGORITHM=HS256

JWT_EXPIRATION_MINUTES=30

JWT_REFRESH_EXPIRATION_DAYS=7

# ========================
# EMAIL SETTINGS
# ========================

EMAIL_ENABLED=False

SMTP_SERVER=smtp.gmail.com

SMTP_PORT=587

SMTP_USERNAME=your-email@gmail.com

SMTP_PASSWORD=your-app-password

SMTP_FROM_EMAIL=noreply@starcourier.com

SMTP_FROM_NAME=StarCourier Web

# ========================
# LOGGING SETTINGS
# ========================

LOG_LEVEL=INFO

LOG_FILE=logs/app.log

LOG_MAX_BYTES=10485760

LOG_BACKUP_COUNT=5

LOG_FORMAT=text

# ========================
# GAME SETTINGS
# ========================

MAX_ACTIVE_GAMES=1000

SESSION_TIMEOUT=60

SAVE_PROGRESS_TO_DB=False

AUTO_SAVE_ENABLED=False

AUTO_SAVE_INTERVAL=5

# ========================
# EXTERNAL APIs
# ========================

# Оставьте пустыми если не используются

# OPENAI_API_KEY=
# SENTRY_DSN=

# ========================
# FRONTEND SETTINGS
# ========================

FRONTEND_URL=http://localhost:5173

# ========================
# DOCUMENTATION
# ========================

DOCS_ENABLED=True

REDOC_ENABLED=True

DOCS_URL=/docs

REDOC_URL=/redoc

OPENAPI_URL=/openapi.json