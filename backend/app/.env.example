# ============================================================================
# FILE: .env.example
# ============================================================================
# COPY THIS FILE TO .env AND FILL IN YOUR VALUES
# Скопируйте этот файл в .env и заполните ваши значения
#
# Команда:
# cp .env.example .env
# ============================================================================

# ========================
# APPLICATION SETTINGS
# ========================

# Название приложения
APP_NAME=StarCourier Web

# Версия приложения
APP_VERSION=1.0.0

# Окружение разработки: development, staging, production
ENVIRONMENT=development

# Режим отладки: true или false
DEBUG=True

# Secret key для генерации JWT токенов (генерируется через: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-this-in-production

# ========================
# SERVER SETTINGS
# ========================

# Хост сервера
SERVER_HOST=0.0.0.0

# Порт сервера
SERVER_PORT=8000

# Путь к API
API_PREFIX=/api

# CORS разрешённые источники (разделены запятой)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ========================
# DATABASE SETTINGS
# ========================

# Тип БД: sqlite, postgresql, mysql, mongodb
DATABASE_TYPE=sqlite

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/starcourier

# SQLite (для разработки)
# DATABASE_URL=sqlite:///./starcourier.db

# MongoDB
# MONGODB_URL=mongodb://localhost:27017
# MONGODB_DB_NAME=starcourier

# MySQL
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/starcourier

# Количество пулов БД подключений
DATABASE_POOL_SIZE=5

# Максимальное переполнение пула
DATABASE_MAX_OVERFLOW=10

# ========================
# CACHE SETTINGS
# ========================

# Включить кэширование: true или false
CACHE_ENABLED=False

# Тип кэша: redis, memory
CACHE_TYPE=memory

# Redis URL
REDIS_URL=redis://localhost:6379/0

# TTL кэша в секундах
CACHE_TTL=300

# ========================
# AUTHENTICATION SETTINGS
# ========================

# Включить аутентификацию: true или false
AUTH_ENABLED=False

# Алгоритм JWT
JWT_ALGORITHM=HS256

# Время жизни JWT токена в минутах
JWT_EXPIRATION_MINUTES=30

# Время жизни refresh токена в днях
JWT_REFRESH_EXPIRATION_DAYS=7

# ========================
# EMAIL SETTINGS
# ========================

# Включить отправку email: true или false
EMAIL_ENABLED=False

# SMTP сервер
SMTP_SERVER=smtp.gmail.com

# SMTP порт
SMTP_PORT=587

# Email адрес отправителя
SMTP_USERNAME=your-email@gmail.com

# Пароль приложения
SMTP_PASSWORD=your-app-password

# Email отправителя (from)
SMTP_FROM_EMAIL=noreply@starcourier.com

# Имя отправителя
SMTP_FROM_NAME=StarCourier Web

# ========================
# LOGGING SETTINGS
# ========================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=logs/app.log

# Максимальный размер лога в байтах
LOG_MAX_BYTES=10485760

# Количество резервных логов
LOG_BACKUP_COUNT=5

# Формат логирования: json или text
LOG_FORMAT=text

# ========================
# GAME SETTINGS
# ========================

# Максимальное количество активных игр
MAX_ACTIVE_GAMES=1000

# Таймаут сессии в минутах (сколько времени хранить неактивную сессию)
SESSION_TIMEOUT=60

# Включить сохранение прогресса в БД: true или false
SAVE_PROGRESS_TO_DB=False

# Включить автосохранение: true или false
AUTO_SAVE_ENABLED=False

# Интервал автосохранения в минутах
AUTO_SAVE_INTERVAL=5

# ========================
# EXTERNAL APIs (OPTIONAL)
# ========================

# OpenAI API key (для генерации контента)
# OPENAI_API_KEY=sk-...

# Sentry DSN (для мониторинга ошибок)
# SENTRY_DSN=https://...@sentry.io/...

# ========================
# FRONTEND SETTINGS
# ========================

# Frontend URL (для CORS и редиректов)
FRONTEND_URL=http://localhost:5173

# ========================
# DOCUMENTATION
# ========================

# Включить Swagger документацию
DOCS_ENABLED=True

# Включить ReDoc документацию
REDOC_ENABLED=True

# Путь к Swagger документации
DOCS_URL=/docs

# Путь к ReDoc документации
REDOC_URL=/redoc

# Путь к OpenAPI схеме
OPENAPI_URL=/openapi.json